{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>

        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta">pubblicato il <time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date format="D.M.YYYY"}}</time>
            {{#if tags}}in {{tags}}{{/if}}</div>

        </header>

        <section class="post-content">
            {{content}}
        </section>

        <section class="share">
            <p class="info prompt">Condividi</p>
            <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-2x fa-fw fa-twitter-square"></i> <span class="hidden">Twitter</span>
            </a>
            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-2x fa-fw fa-facebook-square"></i> <span class="hidden">Facebook</span>
            </a>
            <a href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-2x fa-fw fa-google-plus-square"></i> <span class="hidden">Google+</span>
            </a>
        </section>

        <footer class="post-footer">

            {{#if author}}
                <section class="author">
                    <div class="authorimage" style="background: url({{author.image}})"></div>
                    <p class="bio">Pubblicato da <a href="/about">{{author.name}}</a> il
                    <time datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date format="D.M.YYYY"}}</time>
                    {{#if tags}}in {{tags}}{{/if}}
                    (ultimo aggiornamento <time datetime="{{date updated_at format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date updated_at format="D.M.YYYY"}}).</time>
                    </p>
                </section>
            {{/if}}

        </footer>

        {{/post}}

        {{comments-disqus}}
        {{!> comments-facebook}}
        {{!> comments-google-plus}}

    </article>

</main>
