<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{pageUrl prev}}"><i class="fa fa-chevron-circle-left"></i> Successivi</a>
    {{/if}}
    <span class="page-number">Pagina {{page}} di {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{pageUrl next}}">Precedenti <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>